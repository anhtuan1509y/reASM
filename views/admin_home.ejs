<!doctype html>
<html lang="en">
  <head>
    <title>List product</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->   
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
    .noti{
      width: 300px !important;
      position: absolute;
      top: 150px;
      left: 500px;
    }
    </style>
  </head>
  <body>
      <div class="container">
        <div class="row">
          <div class="col-10">
              <h1>Hello: <%=locals.name%></h1>
          </div>
          <div class="col-2">
              <a href="#" class="btn btn-success text-right">Log out</a>
          </div>
        </div>
        <h2 class="text-center">List product</h2>
        <%if(locals.lProduct.rowCount != 0){%>
          <table class="table">
              <thead>
                  <tr>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Description</th>
                      <th>Image</th>
                      <th><a href="/add">Add</a></th>
                  </tr>
              </thead>
              <tbody>
                <%lProduct.rows.forEach(element => {%>       
                  <tr>
                      <td><%=element.name%></td>
                      <td><%=element.price%></td>
                      <td><%=element.dsc%></td>
                      <td><%=element.img%></td>
                      <td><a href="/delete/<%=element.id %>">Delete</a> - <a href="/edit/<%=element.id %>">Edit</a></td>
                  </tr>
                  <%});%>
              </tbody>
          </table>
          <%} else{%>
           <table class="table">
             <thead>
               <tr>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Description</th>
                      <th>Image</th>
                      <th><a href="/add">Add</a></th>
               </tr>
             </thead>
             <tbody>
               <tr>
                  <td><div class="container"><h2>Nothing to display</h2></div></td>
               </tr>
             </tbody>
           </table>
            <%}%>
          
            <%if(locals.msgDelete){%>
              <%-'</div><div class="alert alert-success alert-dismissible fade show noti"><button type="button" class="close" data-dismiss="alert">&times;</button> <strong>Success!</strong> Product has deleted!</div>'%>
            <%}%>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>